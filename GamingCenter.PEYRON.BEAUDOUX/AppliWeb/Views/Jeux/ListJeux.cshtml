@model IEnumerable<AppliWeb.Models.JeuViewModel>

@{
    ViewBag.Title = "ListJeux";
}

<h2>ListJeux</h2>
<form asp-controller="Jeux" asp-action="Search">
    <p>
        Nom: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<div class="row">
    <hr />
    <h4><span>Jeux</span></h4>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr class="bg-info">
                <th scope="col"> @Html.DisplayNameFor(model => model.Nom) </th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Description)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.DateSortie)</th>
                <th scope="col"> @Html.DisplayName("Genre")</th>
                <th scope="col"> @Html.DisplayName("Editeur")</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.Nom)</th>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.DateSortie)</td>
                <td>@Html.DisplayFor(modelItem => item.GenreNom)</td>
                <td>@Html.DisplayFor(modelItem => item.EditeurNom)</td>
                <td>
                    <button type="button" class="btn">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button>
                    <button type="button" class="btn">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        
                    </button>
                    <button type="button" class="btn">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

